@page "/report"
@inherits ReactiveInjectableComponentBase<ReportViewModel>
<PageTitle>事件上报</PageTitle>
<MudStack Style="height: 100vh; padding-top: 10px">
    <MudText Typo="Typo.subtitle1" Style="color: grey">请选择确认场景</MudText>
    @if (ViewModel == null)
    {
        <MudText Typo="Typo.subtitle1">拼命加载中...</MudText>
    }
    else
    {
        <MudPaper Square="true" Elevation="0" Style="height: calc(100vh - 120px); overflow: auto; background-color: transparent">
            <MudList Clickable="true" @bind-SelectedValue="@ViewModel.CurrentScene" DisablePadding="true" Style="color: royalblue; background-color: white">
                <MudListSubheader>
                    <MudText Typo="Typo.subtitle2">@ViewModel.ReporterName @ViewModel.ReporterMobile</MudText>
                </MudListSubheader>
                    <MudDivider />
                @foreach (var scene in ViewModel.Scenes)
                {
                    <MudListItem Value="scene">
                        <MudStack Row="true" Justify="Justify.SpaceBetween">
                            <SceneItemView ViewModel="scene" />
                            @if(scene == ViewModel.CurrentScene)
                            {
                                <MudIcon Icon="@Icons.Material.Filled.Check" Color="Color.Info" />
                            }
                        </MudStack>
                </MudListItem>
                    <MudDivider />
                }
            </MudList>
        </MudPaper>
        <MudButton StartIcon="@Icons.Material.Filled.Save" Command="@ViewModel.SubmitCaseCommand" Disabled="@ViewModel.CannotSubmitCase" Variant="Variant.Filled" Style="background-color: royalblue; color: white" Size="Size.Large">
            <MudText Typo="Typo.subtitle1">确认</MudText>
        </MudButton>
    }
</MudStack>
