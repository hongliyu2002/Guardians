@using Guardians.Domain.Shared
@inherits ReactiveComponentBase<CaseItemViewModel>
@if (ViewModel == null)
{
    <MudText Typo="Typo.subtitle1">拼命加载中...</MudText>
}
else
{
    <MudStack Style="padding: 20px">
        <MudStack Row="true" Justify="Justify.SpaceBetween">
            <MudText Typo="Typo.h6" Style="font-weight: bolder">@ViewModel.SceneTitle</MudText>
            @if (ViewModel.StatusCode == (int)CaseStatus.Completed)
            {
                <MudText Typo="Typo.subtitle1" Color="Color.Default">@ViewModel.StatusName</MudText>
            }
            else
            {
                <MudText Typo="Typo.subtitle1" Color="Color.Primary">@ViewModel.StatusName</MudText>
            }
        </MudStack>
        <MudText Typo="Typo.subtitle2" Style="color: gray">上报时间: @ViewModel.ReportedAt.ToString("yyyy-MM-dd HH:mm")</MudText>
        <MudText Typo="Typo.subtitle2" Style="color: gray">事件ID: @ViewModel.Id.ToString("N")</MudText>
    </MudStack>
}
